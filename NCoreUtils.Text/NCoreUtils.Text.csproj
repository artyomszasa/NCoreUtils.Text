    <Compile Remove="Text\RuneEnumerationExtensions.cs" />
    <Compile Remove="Text\SpanRuneEnumerator.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\NCoreUtils.Text.Abstractions\NCoreUtils.Text.Abstractions.csproj" />
